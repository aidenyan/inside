      </if>
      <if test="status != null" >
        status = #{status,jdbcType=TINYINT},
      </if>
      <if test="loginTime != null" >
        login_time = #{loginTime,jdbcType=TIMESTAMP},
      </if>
      <if test="loginIp != null" >
        login_ip = #{loginIp,jdbcType=VARCHAR},
      </if>
      <if test="errorNum != null" >
        error_num = #{errorNum,jdbcType=TINYINT},
      </if>
      <if test="deleted != null" >
        deleted = #{deleted,jdbcType=TINYINT},
      </if>
        modify_time = now(),
      <if test="modifyId != null" >
        modify_id = #{modifyId,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  
  <select id="countByDepartmentId" resultType="java.lang.Integer">
    select count(id) from t_account_info where deleted=0 and department_id=#{departmentId}
  </select>
  
  <select id="listByDepartmentId" resultMap="BaseResultMap">
     select
    <include refid="Base_Column_List" />
    from t_account_info a where deleted=0 and department_id=#{departmentId}
    <if test="searchName != null ">
     and  (a.name like contcat('%','#{searchName}','%')
      or EXISTS (SELECT  p.id from t_person_info p where p.deleted=0 and p.name like contcat('%','#{searchName}','%') )
      )
    </if>
  </select>
